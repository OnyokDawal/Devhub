<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.devpartners.devhub.ui.OpenSpaceActivity">

    <ImageView
        android:id="@+id/openSpaceLogo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/openarms"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/openSpaceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/openspace_title"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/openSpaceLogo"
        app:layout_constraintStart_toStartOf="@id/openSpaceLogo"
        app:layout_constraintTop_toBottomOf="@id/openSpaceLogo"
        />

    <TextView
        android:id="@+id/lengthStayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:text="@string/length_stay"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/openSpaceText"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ExpandableListView
        android:id="@+id/expandableView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toEndOf="@id/lengthStayText"
        app:layout_constraintTop_toBottomOf="@id/lengthStayText"
        android:indicatorRight="?android:attr/expandableListPreferredChildIndicatorRight"
        android:drawSelectorOnTop="true"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.5dp"
        >
    </ExpandableListView>

    <TextView
        android:id="@+id/checkinTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/check_in"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/lengthStayText"
        app:layout_constraintEnd_toEndOf="@id/lengthStayText"
        app:layout_constraintTop_toBottomOf="@id/expandableView"
        />


</android.support.constraint.ConstraintLayout>
